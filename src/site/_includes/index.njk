{% include "partials/head.njk" %}
{% from "partials/teaser.njk" import teaser with context %}


<div class="index__wrap">
  <div class="index__content">
      {{ content | safe }}
      
      <section>
        <h2>Just in</h2>
        <ul class="index__main-teasers">
          <li class="index__teaser-wide">
            {{ teaser(collections.posts.slice(-1)[0], size='large', author=true ) }}
          </li>
        
        {% for post in collections.posts.slice(0, collections.posts.length-1)|reverse %}
            <li class="index__teaser-half">
              {{ teaser(post, size='medium') }}
            </li>
        {% endfor %}
        </ul>
      </section>
  </div>
</div>

    
{% include "partials/footer.njk" %}